{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Linux",
            "type": "lldb",
            "request": "launch",
            "cwd": "${workspaceFolder}/build/linux/logic",
            "program": "${workspaceFolder}/build/linux/logic/sample",
            "env": {
                "__NV_PRIME_RENDER_OFFLOAD": "1",
                "__GLX_VENDOR_LIBRARY_NAME": "nvidia"
            },
            "preLaunchTask": "Rebuild:linux"
        },
        {
            "name": "(lldb) Linux",
            "type": "lldb",
            "request": "launch",
            "cwd": "${workspaceFolder}/build/win64/logic",
            "program": "${workspaceFolder}/build/win64/logic/sample",
            "preLaunchTask": "Rebuild:win64"
        },
    ],
    "inputs": [
        {
            "id": "OpenGLTargets",
            "description": "Target to run",
            "type": "pickString",
            "options": [
                "rendering"
            ]
        },
        {
            "id": "GLMTargets",
            "description": "Target to run",
            "type": "pickString",
            "options": [
                "glm-sample"
            ]
        },
        {
            "id": "Examples",
            "description": "Target to run",
            "type": "pickString",
            "options": [
                "lf-queue"
            ]
        }
    ]
}