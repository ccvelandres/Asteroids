{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure:Native",
            "linux":{
                "command": "cmake",
                "args": [
                    "--preset=native"
                ]
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build:NativeSample",
            "linux":{
                "command": "cmake",
                "args": [
                    "--build",
                    "--preset=native",
                    "--target", "sample",
                    "--parallel"
                ],
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Configure:Native"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Rebuild:NativeSample",
            "linux":{
                "command": "cmake",
                "args": [
                    "--build",
                    "--preset=native",
                    "--target", "sample",
                    "--parallel"
                ],
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build:Profiler",
            "linux":{
                "command": "cmake",
                "args": [
                    "--build",
                    "--preset=native",
                    "--target", "easy_profiler_project",
                    "--parallel"
                ],
            }
        },
        {
            "label": "Launch:Profiler",
            "linux":{
                "command": "${workspaceFolder}/build/native/debug/core/install/bin/profiler_gui",
                "options": {
                    "env": {
                        "LD_LIBRARY_PATH": "${workspaceFolder}/build/native/debug/core/install/lib"
                    }
                }
            },
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            },
            "dependsOn": [
                "Build:Profiler"
            ],
            "type": "process",
            "problemMatcher": []
        }
    ]
}