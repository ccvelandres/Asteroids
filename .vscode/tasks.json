{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure:linux",
            "command": "cmake",
            "args": [
                "--preset=linux"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Configure:win64",
            "command": "cmake",
            "args": [
                "--preset=win64"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build:linux",
            "command": "cmake",
            "args": [
                "--build",
                "--preset=linux",
                "--target",
                "sample",
                "--parallel"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Configure:linux"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Build:win64",
            "command": "cmake",
            "args": [
                "--build",
                "--preset=win64",
                "--target",
                "sample",
                "--parallel"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Configure:win64"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Rebuild:linux",
            "command": "cmake",
            "args": [
                "--build",
                "--preset=linux",
                "--target",
                "sample",
                "--parallel"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Rebuild:win64",
            "command": "cmake",
            "args": [
                "--build",
                "--preset=win64",
                "--target",
                "sample",
                "--parallel"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build:Profiler",
            "command": "cmake",
            "args": [
                "--build",
                "--preset=native",
                "--target",
                "easy_profiler_project",
                "--parallel"
            ]
        },
        {
            "label": "Launch:Profiler",
            "linux": {
                "command": "build/native/debug/core/lib/easy_profiler/bin/profiler_gui",
            },
            "windows": {
                "command": "build/win64/_deps/easy_profiler_project-build/bin/profiler_gui.exe",
            },
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            },
            "type": "shell",
            "problemMatcher": []
        }
    ]
}