{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure:Native",
            "linux":{
                "command": "cmake",
                "args": [
                    "--preset=native"
                ]
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build:NativeSample",
            "linux":{
                "command": "cmake",
                "args": [
                    "--build",
                    "--preset=native",
                    "--target", "sample",
                    "--parallel"
                ],
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Configure:Native"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Rebuild:NativeSample",
            "linux":{
                "command": "cmake",
                "args": [
                    "--build",
                    "--preset=native",
                    "--target", "sample",
                    "--parallel"
                ],
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Configure:Release",
            "linux":{
                "command": "cmake",
                "args": [
                    "-B${workspaceFolder}/build/linux",
                    "-DCMAKE_BUILD_TYPE:STRING=Release"
                ],
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build:Release",
            "linux":{
                "command": "cmake",
                "args": [
                    "--build",
                    "${workspaceFolder}/build/linux",
                    "--target",
                    "all",
                    "--parallel"
                ],
            },
            "dependsOn": [
                "Configure:Release"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Launch:Profiler",
            "linux":{
                "command": "${workspaceFolder}/build/linux/out/profiler_gui",
            },
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            },
            "dependsOn": [
                "Build:Debug"
            ],
            "type": "process",
            "problemMatcher": []
        }
    ]
}